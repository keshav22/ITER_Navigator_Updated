<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="navigator.iter.ourapp.blockapp.FacultyNameHome"
    android:background="@drawable/home"
    android:clickable="false"
    android:id="@+id/facultyname"
    android:backgroundTintMode="multiply"
    android:backgroundTint="#ff529062">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/navigation_action" android:layout_height="wrap_content" android:layout_width="match_parent"></include>

        <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="40dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find by Faculty name"
        android:id="@+id/homeDescription2"
        android:layout_below="@+id/homeDescription1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="#ffffebc1"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter FACULTY Name about"
        android:id="@+id/text_name"
        android:gravity="center"
        android:textColor="#ffffebc1"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="which you want to know?"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#ffffebc1"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/text_name"
    />
    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:hint="Enter name of FACULTY"
        android:textColorHint="#96ffffff"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/roomInput"
        android:completionThreshold="1"
        android:inputType="textPersonName"
        android:layout_marginTop="250dp"
        android:imeOptions="actionSend"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Search"
        android:textStyle="bold"
        android:textSize="18dp"
        android:id="@+id/search_name"
        android:background="@drawable/button1"
        android:textColor="#ffffffff"
        android:elegantTextHeight="false"
        android:clickable="true"
        android:onClick="searchRoom_1"
        />
    </RelativeLayout>
</ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:id="@+id/main5">
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigaton_menu"
        android:layout_gravity="start"
        android:id="@+id/navigation"
        app:headerLayout="@layout/nav_header">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
